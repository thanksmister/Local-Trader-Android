<android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coordinatorLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/Theme.AppCompat.Light"/>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fillViewport="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <View
                        style="@style/DividerHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/view_padding_small"
                        android:paddingBottom="@dimen/view_padding_small"
                        android:paddingLeft="@dimen/view_padding"
                        android:paddingRight="@dimen/view_padding"
                        android:orientation="vertical">

                    <TextView
                            style="@style/TextSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Buying or selling?"
                            android:gravity="left"/>

                    <Spinner
                            android:id="@+id/typeSpinner"
                            android:theme="@style/SpinnerTheme"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                </LinearLayout>

                <View
                        style="@style/DividerHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/view_padding_small"
                        android:paddingBottom="@dimen/view_padding_small"
                        android:paddingLeft="@dimen/view_padding"
                        android:paddingRight="@dimen/view_padding"
                        android:orientation="vertical">

                    <TextView
                            style="@style/TextSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Locally or online?"
                            android:gravity="left"/>

                    <Spinner
                            android:id="@+id/locationSpinner"
                            android:theme="@style/SpinnerTheme"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    
                </LinearLayout>

                <View
                        style="@style/DividerHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                
                <LinearLayout
                        android:id="@+id/localOptionsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            style="@style/SmallText.ExtraSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/view_padding"
                            android:paddingLeft="@dimen/view_padding"
                            android:paddingRight="@dimen/view_padding"
                            android:text="@string/text_local_search_instructions"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/view_padding_small"
                            android:paddingBottom="10dp"
                            android:paddingLeft="@dimen/view_padding"
                            android:paddingRight="8dp">

                        <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            <FrameLayout
                                    android:id="@+id/editLocationLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="16dp"
                                    android:theme="@style/EditTextTheme"
                                    android:visibility="visible">

                                <AutoCompleteTextView
                                        android:theme="@style/EditTextTheme"
                                        style="@style/TextLarge.SmallAction"
                                        android:id="@+id/editLocationText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:hint="Enter County, City or Address"
                                        android:maxLines="3"/>

                            </FrameLayout>

                            <TextView
                                    style="@style/TextLarge.SmallAction"
                                    android:id="@+id/locationText"
                                    android:paddingTop="16dp"
                                    android:paddingLeft="0dp"
                                    android:paddingRight="4dp"
                                    android:paddingBottom="16dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:maxLines="3"
                                    tools:visibility="visible"
                                    android:visibility="gone"/>

                        </FrameLayout>

                        <ImageButton
                                style="@style/BorderlessButtonStyle"
                                android:id="@+id/clearButton"
                                android:contentDescription="@string/desc"
                                android:layout_height="36dp"
                                android:layout_width="36dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_action_content_clear"
                                android:layout_weight="0"/>

                    </LinearLayout>

                    <View
                            style="@style/DividerHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/view_padding_small"
                            android:paddingBottom="4dp"
                            android:paddingLeft="@dimen/view_padding"
                            android:paddingRight="@dimen/view_padding"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Latitude"
                                android:gravity="left"/>

                        <EditText
                                android:id="@+id/editLatitude"
                                style="@style/TextLarge.SmallAction"
                                android:theme="@style/SpinnerTheme"
                                android:digits=".0123456789-"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                    </LinearLayout>

                    <View
                            style="@style/DividerHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/view_padding_small"
                            android:paddingBottom="4dp"
                            android:paddingLeft="@dimen/view_padding"
                            android:paddingRight="@dimen/view_padding"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits=".0123456789-"
                                android:text="Longitude"
                                android:gravity="left"/>

                        <EditText
                                android:id="@+id/editLongitude"
                                style="@style/TextLarge.SmallAction"
                                android:theme="@style/SpinnerTheme"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                    </LinearLayout>
                    
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/onlineOptionsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:visibility="visible"
                        android:visibility="gone">

                    <View
                            style="@style/DividerHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/view_padding_small"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Country?"
                                android:gravity="left"
                                android:layout_marginLeft="@dimen/view_padding"/>

                        <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/view_padding_small"
                                android:paddingBottom="8dp"
                                android:paddingLeft="@dimen/view_padding"
                                android:paddingRight="@dimen/view_padding">

                            <Spinner
                                    android:id="@+id/countrySpinner"
                                    android:theme="@style/SpinnerTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                        </FrameLayout>


                    </LinearLayout>

                    <View
                            style="@style/DividerHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/view_padding_small"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Currency?"
                                android:gravity="left"
                                android:layout_marginLeft="@dimen/view_padding"/>

                        <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/view_padding_small"
                                android:paddingBottom="8dp"
                                android:paddingLeft="@dimen/view_padding"
                                android:paddingRight="@dimen/view_padding">

                            <Spinner
                                    android:id="@+id/currencySpinner"
                                    android:theme="@style/SpinnerTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                        </FrameLayout>

                        <View
                                style="@style/DividerHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/view_padding_small">

                        <TextView
                                style="@style/TextSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Online payment method?"
                                android:gravity="left"
                                android:layout_marginLeft="@dimen/view_padding"/>

                        <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/view_padding_small"
                                android:paddingBottom="8dp"
                                android:paddingLeft="@dimen/view_padding"
                                android:paddingRight="@dimen/view_padding">

                            <Spinner
                                    android:id="@+id/paymentMethodSpinner"
                                    android:theme="@style/SpinnerTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                        </FrameLayout>

                        <View
                                style="@style/DividerHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <View
                android:background="?android:attr/dividerHorizontal"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    style="@style/ButtonGreen.Small"
                    android:id="@+id/searchButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:textAllCaps="true"
                    android:text="@string/button_search_trades"/>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>