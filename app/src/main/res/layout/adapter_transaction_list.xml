<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="16dp">

        <ImageView
                android:id="@+id/transactionIcon"
                android:contentDescription="@string/desc"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:src="@drawable/ic_action_arrow_left_top"/>

        <TextView
                style="@style/TextLarge.SmallAction"
                android:id="@+id/descriptionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="This is the description for what its worth"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>

        <View
                android:layout_width="16dp"
                android:layout_height="match_parent"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right">

            <TextView
                    style="@style/TextLarge.SmallAction"
                    android:id="@+id/btcText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.000 BTC"
                    android:textIsSelectable="true"
                    android:gravity="center_vertical|right"
                    android:layout_gravity="right"/>

            <TextView
                    style="@style/SmallText.ExtraSmall"
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:text="11/11/2011"/>

        </LinearLayout>

    </LinearLayout>

    <View
            style="@style/DividerHorizontal"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="72dp"/>

</FrameLayout>
